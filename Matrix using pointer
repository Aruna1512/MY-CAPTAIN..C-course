//program to print a matrix using pointer
#include<stdio.h>
int main()
{
     int a1,a2,a3,a4,a5,a6,a7,a8,a9;
     int *p1,*p2,*p3,*p4,*p5,*p6,*p7,*p8,*p9;
     printf("enter 9 values for 3*3 matrix");
     scanf("%d %d %d %d %d %d %d %d %d",&a1,&a2,&a3,&a4,&a5,&a6,&a7,&a8,&a9);
     p1=&a1;
     p2=&a2;
     p3=&a3;
     p4=&a4;
     p5=&a5;
     p6=&a6;
     p7=&a7;
     p8=&a8;
     p9=&a9;
     printf("%d   %d   %d\n%d  %d  %d\n%d   %d  %d",*p1,*p2,*p3,*p4,*p5,*p6,*p7,*p8,*p9);
     int sum=*p1+*p5+*p9;
     printf("\nthe sum of diagonal elements=%d",sum);
     return 0;
}
     
           
