//sum of digit using recursion function
#include<stdio.h>
int sum (int n);
int main()
{
    int n,result;
    printf("enter number as n");
    scanf("%d",&n);
    result=sum(n);
    printf("the sum of %d is=%d",n,result);
    return 0;
}
